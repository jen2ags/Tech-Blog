<section class="card">
    <div class="card-header">
       <h2>
           <a href="/post/{{id}}">{{title}}</a>
           <div>Created by {{user.username}} on {{format_date created_at}}</div>
       </h2>
    </div>
       <div class="card-body"> {{blog_text}}</div>
</section>

//lesson 
<article class="post">
  <div class="title">
    <a href="{{post_url}}" target="_blank">{{title}}</a>
    <span>({{format_url post_url}})</span>
  </div>
  <div class="meta">
    {{vote_count}} {{format_plural "point" vote_count}} by {{user.username}} on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>